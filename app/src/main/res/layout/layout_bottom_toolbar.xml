<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp">

    <FrameLayout
        android:id="@+id/actionLayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_action_v2_background"
        android:foreground="@drawable/selectable_item_background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/selector_text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/actionLayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/actionLayer"
        tools:text="Action text"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>